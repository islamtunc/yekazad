generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

enum Role {
  USER
  ADMIN
}

model User {
  id                    String         @id
  username              String         @unique
  displayName           String
  email                 String?        @unique
  passwordHash          String?
  googleId              String?        @unique
  avatarUrl             String?
  bio                   String?
  sessions              Session[]
  posts                 Post[]
  web                   Web[]
  bookmarks             Bookmark[]

  createdAt   DateTime      @default(now())
  Mobil       Mobil[]
  Perwerde    Perwerde[]
  Pesdebir    Pesdebir[]
  JiriyaSuni  JiriyaSuni[]
  Robotik     Robotik[]
  Mmhuner     Mmhuner[]
  role                  Role           @default(USER)
  disabled              Boolean         @default(false)
  @@map("users")
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Post {
  id                  String         @id @default(cuid())
  content             String[]
  userId              String
  user                User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  attachments         Media[]
  bookmarks           Bookmark[]

  createdAt DateTime @default(now())

  @@map("posts")
}

model Web {
  id          String  @id @default(cuid())
  content     String[]
  userId      String
  user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  attachments Media[]

  bookmarks Bookmark[]

  createdAt           DateTime       @default(now())

  @@map("web")
}

model Mobil {
  id          String  @id @default(cuid())
  content     String[]
  userId      String
  user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  attachments Media[]

  bookmarks Bookmark[]

  createdAt           DateTime       @default(now())

  @@map("mobil")
}

model JiriyaSuni {
  id          String  @id @default(cuid())
  content     String[]
  userId      String
  user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  attachments Media[]

  bookmarks Bookmark[]

  createdAt           DateTime       @default(now())

  @@map("jiriyasuni")
}

model Robotik {
  id          String  @id @default(cuid())
  content     String[]
  userId      String
  user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  attachments Media[]

  bookmarks Bookmark[]

  createdAt           DateTime       @default(now())

  @@map("robotik")
}

model Pesdebir {
  id          String  @id @default(cuid())
  content     String[]
  userId      String
  user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  attachments Media[]

  bookmarks Bookmark[]

  createdAt           DateTime       @default(now())

  @@map("pesdebir")
}

model Perwerde {
  id          String  @id @default(cuid())
  content     String[]
  userId      String
  user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  attachments Media[]

  bookmarks Bookmark[]

  createdAt           DateTime       @default(now())

  @@map("perwerde")
}



model Media {
  id     String    @id @default(cuid())
  postId String?
  post   Post?     @relation(fields: [postId], references: [id], onDelete: SetNull)
  type   MediaType
  url    String

  createdAt     DateTime     @default(now())
  web           Web?         @relation(fields: [webId], references: [id], onDelete: SetNull)
  webId         String?
  mobil         Mobil?       @relation(fields: [mobilId], references: [id], onDelete: SetNull)
  mobilId       String?
  perwerde      Perwerde?    @relation(fields: [perwerdeId], references: [id], onDelete: SetNull)
  perwerdeId    String?
  pesdebir      Pesdebir?    @relation(fields: [pesdebirId], references: [id], onDelete: SetNull)
  pesdebirId    String?
  jiriyasuni    JiriyaSuni?  @relation(fields: [jiriyasuniId], references: [id], onDelete: SetNull)
  jiriyasuniId  String?
  robotik       Robotik?     @relation(fields: [robotikId], references: [id], onDelete: SetNull)
  robotikId     String?
  Mmhuner       Mmhuner?     @relation(fields: [mmhunerId], references: [id])
  mmhunerId     String?

  @@map("post_media")
}

enum MediaType {
  IMAGE
  VIDEO
}

model Bookmark {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  postId String
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)

  createdAt     DateTime     @default(now())
  web           Web?         @relation(fields: [webId], references: [id], onDelete: Cascade)
  webId         String?
  mobil         Mobil?       @relation(fields: [mobilId], references: [id], onDelete: Cascade)
  mobilId       String?
  perwerde      Perwerde?    @relation(fields: [perwerdeId], references: [id], onDelete: Cascade)
  perwerdeId    String?
  pesdebir      Pesdebir?    @relation(fields: [pesdebirId], references: [id], onDelete: Cascade)
  pesdebirId    String?
  jiriyasuni    JiriyaSuni?  @relation(fields: [jiriyasuniId], references: [id], onDelete: Cascade)
  jiriyasuniId  String?
  robotik       Robotik?     @relation(fields: [robotikId], references: [id], onDelete: Cascade)
  robotikId     String?

}

model Mmmpeyam {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}
